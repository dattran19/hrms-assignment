{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Debug (uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "ENV": "local"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "FastAPI: Debug (uvicorn --reload)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "ENV": "local"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}